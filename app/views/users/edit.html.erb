<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <% if @user.errors.any? %>
        <h2><%= @user.errors.count %> error prohibited this object from being saved:<h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <h1>User info</h1>
        <%= form_with model: @user do |f| %>
          <div class="form-group">
            <label for="inputName">Name</label>
            <p><%= f.text_field :name, autofocus: true, id: "inputName" %></p>
          </div>
          <div class="form-group">
            <label for="inputImage">Image</label>
            <p><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>
          </div>
          <div class="form-group">
            <label for="user_introduction">Introduction</label>
            <p><%= f.text_area :introduction, id: "inputIntroduction" %></p>
          </div>
          <div class="form-group">
            <%= f.submit "Update User" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>