<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="container px-5 px-sm-0">
      <div class="row">
        <%= render 'books/list', book: @book, books: @books %>
        <div class="col-md-8 offset-md-1">
          <h1>Users</h1>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <% @users.each do |user| %>
                <% @books.each do |book| %>
                <td>
                  <p><%= image_tag book.user.get_profile_image(nil, nil) %></p>
                </td>
                <td>
                  <p><%= user.name %></p>
                </td>
                <td>
                 <%= link_to "Show", user_path(user) %>
                </td> 
              </tr>
              <% end %>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</main>